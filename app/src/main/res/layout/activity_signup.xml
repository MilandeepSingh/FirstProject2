<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Signup">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/signup_page_background"
                android:scaleType="centerCrop"
                />


            <TextView
                android:id="@+id/txt_signup_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup Page"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="70dp"
                android:textColor="@color/black"
                android:background="@color/signup_txt_bg"/>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:id="@+id/ll_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_signup_bottom"
                    android:layout_centerHorizontal="true"
                    android:background="@color/signup_txt_bg">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_toRightOf="@+id/txt_name"
                    android:id="@+id/edt_name_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter username..."
                    android:textSize="20dp"/>
                </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_username"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">>
                <TextView
                    android:id="@+id/txt_passwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:id="@+id/edt_passwd_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter password..."
                    android:textSize="20dp"
                    android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rep_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_passwd"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:id="@+id/edt_passwd2_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Repeat passwd..."
                    android:textSize="20dp"
                    android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mobno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_rep_passwd"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile no.: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter mob. no..."
                    android:textSize="20dp"
                    android:inputType="phone"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_mobno"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father name: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Father's name"
                    android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_fname"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother name:"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mother's name"
                    android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_mname"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Fill your address..."
                    android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_address"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail: "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email id..."
                    android:textSize="20dp"
                    android:inputType="textEmailAddress"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/radio_grp_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_email"
        android:layout_centerHorizontal="true"
        android:background="@color/signup_txt_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="25dp"
            
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="22dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="22dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="22dp"/>
        </RadioGroup>

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The above information is correct"
        android:layout_below="@+id/radio_grp_signup"
        android:textSize="22dp"
        android:background="@color/signup_txt_bg"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:onClick="checkmate"
        />
                <Button
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="40dp"
                    android:text="Sign up"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="#ff1493"
                    />
</RelativeLayout>